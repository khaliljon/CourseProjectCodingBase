<Window x:Class="CourseProjectCodingBase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Курсовой проект Каландарова Халила" Height="600" Width="850"
        WindowStartupLocation="CenterScreen" Background="#F3F3F3">
    <Grid>
        <DockPanel>
            <!-- Левая панель с кнопками -->
            <StackPanel DockPanel.Dock="Left" Width="220" Background="#2C3E50">
                <TextBlock Text="Лабораторные работы" FontSize="18" FontWeight="Bold" 
                           Foreground="White" Margin="10" TextAlignment="Center"/>
                <Separator Margin="10,5"/>

                <Button Content="Лабораторная 2" Click="OpenLab2" Margin="10,5" Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="Лабораторная 3" Click="OpenLab3" Margin="10,5" Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="Лабораторная 4" Click="OpenLab4" Margin="10,5" Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="Лабораторная 5" Click="OpenLab5" Margin="10,5" Style="{StaticResource MenuButtonStyle}"/>

                <Separator Margin="10,5"/>
                <Button Content="Выход" Click="ExitApp" Margin="10,5" Style="{StaticResource MenuButtonStyle}" Foreground="Red"/>
            </StackPanel>

            <!-- Основное содержимое -->
            <Frame Name="MainFrame" NavigationUIVisibility="Hidden" Margin="10" Background="White" />
        </DockPanel>
    </Grid>
</Window>