<Window x:Class="CourseProject.Lab5.Lab5Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lab5Window" Height="450" Width="800">
    <Grid>
        <Button Name="LoadFileButton" Content="Загрузить изображение" Click="LoadFileButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <Button Name="CompressButton" Content="Сжать изображение" Click="CompressButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0"/>
        <Button Name="SaveImageButton" Content="Сохранить изображение" Click="SaveImageButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,80,0,0"/>
        <Slider Name="CompressionSlider" Minimum="0" Maximum="100" Value="50" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,120,0,0" Width="100"/>
        <ProgressBar Name="ProgressBar" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,160,0,0" Width="100" Visibility="Collapsed"/>
        <Image Name="OriginalImage" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,10,0,0" Width="300" Height="300"/>
        <Image Name="CompressedImage" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="460,10,0,0" Width="300" Height="300"/>
    </Grid>
</Window>
