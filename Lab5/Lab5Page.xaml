<Page x:Class="CourseProjectCodingBase.Lab5.Lab5Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Lab 5 - JPEG Compression">
    <Grid>
        <Button Name="LoadFileButton" Content="Загрузить файл" Click="LoadFileButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <Slider Name="CompressionLevelSlider" Minimum="1" Maximum="100" Value="50" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0" Width="200"/>
        <Button Name="CompressButton" Content="Сжать" Click="CompressButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,100,0,0"/>
        <Button Name="SaveButton" Content="Сохранить изображение" Click="SaveButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,150,0,0"/>
        <Image Name="OriginalImage" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,10,0,0" Width="200" Height="200"/>
        <Image Name="CompressedImage" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="470,10,0,0" Width="200" Height="200"/>
    </Grid>
</Page>