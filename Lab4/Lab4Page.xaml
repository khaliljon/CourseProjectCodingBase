<Page x:Class="CourseProjectCodingBase.Lab4.Lab4Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Lab4Page">

    <Grid>
        <StackPanel>
            <Button Name="LoadFileButton" Content="Загрузить файл" Click="LoadFileButton_Click" />
            <ComboBox Name="CompressionMethodComboBox">
                <ComboBoxItem Content="Huffman" />
                <ComboBoxItem Content="LZW" />
            </ComboBox>
            <Button Name="CompressButton" Content="Сжать" Click="CompressButton_Click" />
            <Button Name="SaveButton" Content="Сохранить" Click="SaveButton_Click" />
            <Button Name="DecodeButton" Content="Декодировать" Click="DecodeButton_Click" />
            <Button Name="ClearButton" Content="Очистить" Click="ClearButton_Click" />
            <!-- Новая кнопка очистки -->
            <TextBox Name="OutputTextBox" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Height="200" />
        </StackPanel>
    </Grid>
</Page>