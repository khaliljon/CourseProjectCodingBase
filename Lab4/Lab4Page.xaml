<Page x:Class="CourseProjectCodingBase.Lab4.Lab4Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Lab4Page">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- Кнопка загрузки файла -->
        <Button Content="Загрузить файл" Grid.Row="0" Click="LoadFileButton_Click" Margin="5"/>

        <!-- Поле выбора метода сжатия -->
        <ComboBox x:Name="CompressionMethodComboBox" Grid.Row="0" Margin="5" HorizontalAlignment="Right" Width="200">
            <ComboBoxItem Content="Huffman" />
            <ComboBoxItem Content="LZW" />
        </ComboBox>

        <!-- Кнопки для действий -->
        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Сжать" Click="CompressButton_Click" Margin="5"/>
            <Button Content="Сохранить" Click="SaveButton_Click" Margin="5"/>
            <Button Content="Декодировать" Click="DecodeButton_Click" Margin="5"/>
        </StackPanel>

        <!-- Окно вывода информации -->
        <TextBox x:Name="OutputTextBox" Grid.Row="1" Margin="5" VerticalAlignment="Bottom" Height="100" IsReadOnly="True" TextWrapping="Wrap"/>
    </Grid>
</Page>